<Window x:Class="PL.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Cart" Height="450" Width="800">
    <Grid>
        <ListView x:Name="cartview" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="106,113,90,156" MouseDoubleClick="cartview_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn  DisplayMemberBinding = "{Binding Path = ID}"
                    Header = "ID"
                    Width = "80" />

                    <GridViewColumn
                    DisplayMemberBinding = "{Binding Path =ProductID }"
                    Header = "product id "
                    Width = "100" />

                    <GridViewColumn
                    DisplayMemberBinding = "{Binding Path = NameOfProduct}"
                    Header = "name of product"
                    Width = "180" />

                    <GridViewColumn
                    DisplayMemberBinding = "{Binding Path =Price }"
                    Header = "price"
                    Width = "80" />

                    <GridViewColumn
                    DisplayMemberBinding = "{Binding Path = Amount}"
                    Header = "Amount"
                    Width = "80" />
                    <GridViewColumn
                    DisplayMemberBinding = "{Binding Path = TotalPrice}"
                    Header = "Total price"
                    Width = "80" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="cartlabel" Content="cart" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="aproveorder" Content="Aaprove order" HorizontalAlignment="Left" Margin="55,344,0,0" VerticalAlignment="Top" Height="48" Width="101" Click="aproveorder_Click"/>
        <Label x:Name="empty" Content="your cart is empty!!!" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top" Width="320"/>
        <Label x:Name="namelabl" Content="name:" HorizontalAlignment="Left" Margin="192,100,0,0" VerticalAlignment="Top" Width="130"/>
        <Label x:Name="adresslab" Content="adress:" HorizontalAlignment="Left" Margin="192,131,0,0" VerticalAlignment="Top" Width="126"/>
        <Label x:Name="emailab" Content="email:" HorizontalAlignment="Left" Margin="192,162,0,0" VerticalAlignment="Top" Width="126"/>
        <TextBox x:Name="namebox" HorizontalAlignment="Left" Margin="295,108,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="adresbox" HorizontalAlignment="Left" Margin="295,139,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="emailbox" HorizontalAlignment="Left" Margin="295,170,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.058,1.05"/>
        <Button x:Name="finish" Content="aprove" HorizontalAlignment="Left" Margin="335,318,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.96,0.866" Height="38" Width="122" Click="finish_Click"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="665,368,0,0" VerticalAlignment="Top" Width="81" Height="32" Click="Button_Click"/>

    </Grid>
</Window>
